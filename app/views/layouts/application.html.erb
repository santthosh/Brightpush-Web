<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">
<html xmlns="http://www.w3.org/1999/xhtml">
	<head>
		<title><%= @page_title ? "#{@page_title} | #{ Saas::Config.app_name }" : Saas::Config.app_name %></title>
		<meta http-equiv="content-type" content="text/html; charset=utf-8" />
    <%= csrf_meta_tag %>
		<%= stylesheet_link_tag 'reset-fonts.css', 'gt-styles.css', 'admin.css' %>
    <%= javascript_include_tag 'application' %>
		<%= yield :head %>
	</head>
	<body class="<%= controller.controller_path.gsub('/', ' ') %>">
		<!-- head -->
		<div class="gt-hd clearfix">
			<!-- logo -->
			<%
				if current_user
						path = apps_path
				else
						path = root_path
				end		
			%>
			<div class="gt-logo">
				<%= link_to (image_tag "brightpush.png"), path %> 
			</div>
			<!-- / logo -->
              
			<!-- navigation -->
			<div class="gt-nav" style="float:right">
				<ul>
					<% if current_user %>
						<li><%= link_to("Log out #{current_user.name}", destroy_user_session_path) %></li>
					<% end %>	
				</ul>
			</div>
			<!-- / navigation -->
			
		</div>
		<!-- / head -->
		
		<!-- body -->
		<div class="gt-bd gt-cols clearfix">
			
			<!-- main content -->
			<div class="gt-content">				
				<%= flash_notices %>
				<%= yield %>
				
			</div>
			<!-- / main content -->
			
			<!-- sidebar -->
			<div class="gt-sidebar">
				<%= yield :sidebar %>
			</div>
			<!-- / sidebar -->
			
		</div>
		<!-- / body -->
		
		<!-- footer -->
		<div class="gt-footer">
			<p>Copyright &copy; brightpush 2012 </p>
		</div>
		<!-- /footer -->
	</body>
</html>
