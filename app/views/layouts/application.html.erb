<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">
<html xmlns="http://www.w3.org/1999/xhtml">
	<head>
		<title><%= @page_title ? "#{@page_title} | #{ Saas::Config.app_name }" : Saas::Config.app_name %></title>
		<meta http-equiv="content-type" content="text/html; charset=utf-8" />
    <%= csrf_meta_tag %>
		<%= stylesheet_link_tag 'reset-fonts.css', 'gt-styles.css', 'admin.css' %>
    <%= javascript_include_tag 'application' %>
		<%= yield :head %>
	</head>
	<body class="<%= controller.controller_path.gsub('/', ' ') %>">
		<!-- head -->
		<div class="gt-hd clearfix">
			<!-- logo -->
			<div class="gt-logo">
				<%#= link_to image_tag "logo.png" %>
			</div>
			<!-- / logo -->
              
			<!-- navigation -->
			<div class="gt-nav">
				<ul>
                <% if controller.controller_path.starts_with?('saas_admin') %>
                  <li><%= link_to('Subscriptions', saas_admin_subscriptions_path) %></li>
                  <li><%= link_to('Accounts', saas_admin_accounts_path) %></li>
                  <li><%= link_to('Plans', saas_admin_subscription_plans_path) %></li>
                  <li><%= link_to('Discounts', saas_admin_subscription_discounts_path) %></li>
                  <li><%= link_to('Affiliates', saas_admin_subscription_affiliates_path) %></li>
                  <li><%= link_to("Log out #{current_saas_admin.email}", destroy_saas_admin_session_path) %></li>
                <% elsif current_user %>
                  <li><a href="/">Home</a></li>
                  <li><a href="/users">Users</a></li>
                  <li><a href="/apps">Applications</a></li>
                  <%= content_tag(:li, link_to("Account", account_url)) if admin? %>
                  <li><%= link_to("Log out #{current_user.name}", destroy_user_session_path) %></li>
          <% end %>
				</ul>
			</div>
			<!-- / navigation -->
			
		</div>
		<!-- / head -->
		
		<!-- body -->
		<div class="gt-bd gt-cols clearfix">
			
			<!-- main content -->
			<div class="gt-content">
				
				<%= flash_notices %>
				<%= yield %>
				
			</div>
			<!-- / main content -->
			
			<!-- sidebar -->
			<div class="gt-sidebar">
				<%= yield :sidebar %>
			</div>
			<!-- / sidebar -->
			
		</div>
		<!-- / body -->
		
		<!-- footer -->
		<div class="gt-footer">
			<p>Copyright &copy; 2012 newsstand.io - <a href="http://www.newsstand.io" target="_blank">newsstand.io</a></p>
		</div>
		<!-- /footer -->
	</body>
</html>
