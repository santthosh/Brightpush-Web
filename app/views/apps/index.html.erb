<%
  @page_title = 'Applications'
%>

<% if @applications.blank? %>
  <div class="text-align-center" style="margin:20px;">
    Hey, you haven't created any applications, yet. Create one here : 
    <%= link_to "New Application", new_app_path %>
  </div>
<% else %>
  <%= render "applications", :applications => @applications %>
  
  <p>
    <%= will_paginate(@applications) %>  
  </p>
<% end %>
