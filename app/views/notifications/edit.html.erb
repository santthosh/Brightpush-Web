<h1>Change account settings</h1>

<%= form_for @notification, :url => { :action => 'update' }, :html => { :method => :put, :multipart => true } do |f| %>

  <p>
    Enter the following information for your notification .
  </p>

  <% if @notification.errors.any? %>
    <div class="errorExplanation">
      <h2>Errors encountered with your notification information:</h2>
      <ul>
        <% @notification.errors.full_messages.each do |m| %>
          <li><%= m %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <fieldset>
    <%= f.label :name %>
    <%= f.text_field :name %>
    <%= f.label :key %>
    <%= f.text_field :key %>
    <%= f.label :Development_push_certificate %>
    <%= f.file_field :development_push_certificate %>
    <i><%= " [Development Push Certificate]" if @notification.development_push_certificate_file %></i>
    <%= f.label :Crypted_development_push_certificate_password %>
    <%= f.password_field :crypted_development_push_certificate_password, value: @notification.crypted_development_push_certificate_password %>
    <%= f.label :Production_push_certificate %>
    <%= f.file_field :production_push_certificate %>
    <i><%= " [Production Push Certificate]" if @notification.production_push_certificate_file %></i>
    <%= f.label :Crypted_production_push_certificate_password %>
    <%= f.password_field :crypted_production_push_certificate_password, value: @notification.crypted_production_push_certificate_password %>
  </fieldset>

  <fieldset>
    <%= submit_or_cancel :action => 'index' %>
  </fieldset>
<% end %>